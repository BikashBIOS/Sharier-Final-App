<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:background="@android:color/white"
    android:outlineSpotShadowColor="@color/gradient"
    android:outlineAmbientShadowColor="@color/gradient2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="389dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_upload"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_upload"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="Title"
            android:textAlignment="gravity"
            android:textColor="@color/gradient2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="5dp"
            android:autoLink="all"
            android:clickable="true"
            android:text="Description"
            android:textColor="#a9a9a9"
            android:textSize="10sp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/copyLinkUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionIv"
            android:backgroundTint="#fff"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_share" />

        <ImageButton
            android:id="@+id/imgDownload"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/title"
            android:layout_marginLeft="243dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/copyLinkUrl"
            android:background="@drawable/button_gradient"
            android:src="@drawable/ic_download"
             />

    </RelativeLayout>

</androidx.cardview.widget.CardView>